@model MagazaUrunTakip.Models.Entitiy.TblKategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <h2>Kategori Güncelleme</h2>
    <br />
    @Html.HiddenFor(x => x.ID)
    <br />
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <button class="btn bg-warning" style="margin-top:15px">Güncelle</button>
}
