@model MagazaUrunTakip.Models.Entitiy.TblSatislar

@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Satış Paneli</h2>
    <br />
    @*<input type="text" class="form-control" name="Ad" placeholder="Ürün Adını Giriniz..." />*@
    <label>Ürün :</label>
    @Html.DropDownListFor(x => x.TblUrunler.ID, (List<SelectListItem>)ViewBag.dropUrun, new { @class = "form-control" })

    <label style="margin-top:15px">Personel:</label>
    @Html.DropDownListFor(x => x.TblPersonel.ID, (List<SelectListItem>)ViewBag.dropPersonel, new { @class = "form-control" })

    <label style="margin-top:15px">Müşteri:</label>
    @Html.DropDownListFor(x => x.TblMusteri.ID, (List<SelectListItem>)ViewBag.dropMusteri, new { @class = "form-control" })

    <label style="margin-top:15px">Fiyat:</label>
    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })


    <button class="btn bg-info" style="margin-top:15px">Satış Yap</button>
</form>
